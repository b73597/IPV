<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/abc_list_item_padding_horizontal_material"
    android:background="#8876a9">

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/thumbImage"
        android:src="@android:color/background_dark"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Farr Bar"
        android:id="@+id/first_line"
        android:layout_toRightOf="@id/thumbImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/second_line"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/first_line"
        android:layout_alignStart="@+id/first_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/third_line"
        android:layout_below="@+id/second_line"
        android:layout_alignStart="@+id/second_line"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fourth_line"
        android:layout_below="@+id/third_line"
        android:layout_alignStart="@+id/third_line"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
